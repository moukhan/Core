@using OdeToFood.Core
@model Resturant

<div class="card">
    <div class="card-header"><h3>@Model.Name</h3></div>
    <div class="card-body">
        <span>Location : @Model.Location</span>
        <span>Cuisine : @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-link"
           asp-page="./Detail"
           asp-route-resturantId="@Model.Id"><img src="~/open-iconic-master/png/zoom-in-2x.png" /></a>
        <a class="btn btn-link"
           asp-page="./Edit"
           asp-route-resturantId="@Model.Id"><img src="~/open-iconic-master/png/pencil-2x.png" /></a>
        <a class="btn btn-link"
           asp-page="./Delete"
           asp-route-resturantId="@Model.Id"><img src="~/open-iconic-master/png/delete-2x.png" /></a>
    </div>
    <div/>
</div>