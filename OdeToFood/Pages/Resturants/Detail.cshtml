@page "{resturantId:int}"
@model OdeToFood.Pages.Resturants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h1>@Model.Resturant.Name</h1>

@if (Model.Message != null && Model.OperationCode == 1)
{
    <div class="container">
        <div class="alert alert-info">
            <strong>@Model.Message</strong>.
        </div>
    </div>
}

@if (Model.Message != null && Model.OperationCode == 2)
{
    <div class="container">
        <div class="alert alert-success">
            <strong>@Model.Message</strong>.
        </div>
    </div>
}

<div>
    ID : @Model.Resturant.Id
</div>
<div>
    Location : @Model.Resturant.Location
</div>

<div>
    Cuisine : @Model.Resturant.Cuisine
</div>

<a asp-page="./List" class="btn btn-link">All Resturants</a>